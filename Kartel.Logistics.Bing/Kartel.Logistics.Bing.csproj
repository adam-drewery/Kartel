<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
	  <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
	  <PlatformTarget>x64</PlatformTarget>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="BingMapsRESTToolkit" Version="1.1.4" />
	  <PackageReference Include="NetMQ" Version="4.0.1.10" />
	  <PackageReference Include="Serilog" Version="2.12.0" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Kartel.Configuration\Kartel.Configuration.csproj" />
	  <ProjectReference Include="..\Kartel.Core\Kartel.Core.csproj" />
	  <ProjectReference Include="..\Kartel.Logging\Kartel.Logging.csproj" />
	  <ProjectReference Include="..\Kartel.ServiceBase\Kartel.ServiceBase.csproj" />
	  <ProjectReference Include="..\Kartel.Sockets\Kartel.Sockets.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="..\Kartel.Configuration\appsettings.docker.json">
	    <Link>appsettings.docker.json</Link>
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="..\Kartel.Configuration\appsettings.json">
	    <Link>appsettings.json</Link>
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

</Project>
